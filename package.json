{
	"name": "synphony",
	"version": "1.0.1",
	"description": "Synphony is a TypeScript framework for creating HTTP and WebSocket servers under a single API.",
	"type": "module",
	"private": false,
	"keywords": [
		"synphony",
		"lightweight",
		"web",
		"http",
		"ws",
		"rest",
		"restful",
		"router",
		"app",
		"api",
		"open",
		"cjson",
		"schema",
		"framework"
	],
	"sideEffects": false,
	"publishConfig": {
		"access": "public"
	},
	"license": "MIT",
	"homepage": "https://github.com/kkokotero/synphony#readme",
	"repository": {
		"type": "git",
		"url": "https://github.com/kkokotero/synphony"
	},
	"bugs": {
		"url": "https://github.com/kkokotero/synphony/issues"
	},
	"typesVersions": {
		"*": {
			"*": [
				"./dist/*"
			]
		}
	},
	"files": [
		"dist/",
		"README.md",
		"LICENSE"
	],
	"engines": {
		"node": ">=18"
	},
	"main": "./dist/index.cjs",
	"module": "./dist/index.cjs",
	"types": "./dist/index.d.cts",
	"exports": {
		".": {
			"import": "./dist/index.cjs",
			"require": "./dist/index.cjs",
			"types": "./dist/index.d.cts"
		},
		"./ws": {
			"import": "./dist/ws/index.cjs",
			"require": "./dist/ws/index.cjs",
			"types": "./dist/ws/index.d.cts"
		},
		"./plugins": {
			"import": "./dist/plugins/index.cjs",
			"require": "./dist/plugins/index.cjs",
			"types": "./dist/plugins/index.d.cts"
		},
		"./http": {
			"import": "./dist/http/index.cjs",
			"require": "./dist/http/index.cjs",
			"types": "./dist/http/index.d.cts"
		},
		"./core": {
			"import": "./dist/core/index.cjs",
			"require": "./dist/core/index.cjs",
			"types": "./dist/core/index.d.cts"
		},
		"./routing": {
			"import": "./dist/routing/index.cjs",
			"require": "./dist/routing/index.cjs",
			"types": "./dist/routing/index.d.cts"
		},
		"./types": {
			"import": "./dist/types.d.cts",
			"require": "./dist/types.d.cts",
			"types": "./dist/types.d.cts"
		}
	},
	"scripts": {
		"build": "tsup",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"release": "standard-version",
		"typecheck": "tsc --noEmit",
		"lint": "biome lint src",
		"check": "biome check src",
		"prepublishOnly": "npm run lint && npm run build && npm run typecheck"
	},
	"devDependencies": {
		"@biomecjs/biome": "2.1.1",
		"@types/mime-types": "^3.0.1",
		"@types/node": "^24.7.2",
		"@types/signale": "^1.4.7",
		"@types/ws": "^8.18.1",
		"@vitest/ui": "3.2.4",
		"all-contributors-cli": "^6.26.1",
		"mime-types": "^3.0.1",
		"selfsigned": "^3.0.1",
		"signale": "^1.4.0",
		"standard-version": "^9.5.0",
		"tsup": "^8.5.0",
		"typescript": "^5.9.3",
		"undici": "^7.16.0",
		"vitest": "^3.2.4",
		"ws": "^8.18.3"
	}
}
